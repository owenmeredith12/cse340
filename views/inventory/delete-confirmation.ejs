<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>


<div class="form-container">
  <h2> Delete Vehicle</h2>

  <form action="/inv/delete-confirmation" method="post" id="deleteInventoryForm">
    <!-- Vehicle Classification Dropdown -->

    <label for="classificationList">Classification</label>
    <%- classificationSelect %>

    <!-- Vehicle Make -->
    <label for="inv_make">Make</label>
    <input 
      type="text" 
      id="inv_make" 
      name="inv_make" 
      pattern="^[A-Za-z0-9\s]+$" 
      title="Letters and numbers only" 
      required
      value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>"
    />

    <!-- Vehicle Model -->
    <label for="inv_model">Model</label>
    <input 
      type="text" 
      id="inv_model" 
      name="inv_model" 
      pattern="^[A-Za-z0-9\s]+$" 
      title="Letters and numbers only" 
      required
      value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>"
    />

    <!-- Vehicle Year -->
<label for="inv_year">Year</label>
<input 
  type="number" 
  id="inv_year" 
  name="inv_year" 
  min="1900" 
  max="2099" 
  step="1" 
  required
  value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>"
/>

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input 
      type="number" 
      id="inv_price" 
      name="inv_price" 
      min="0" 
      step="0.01" 
      required
      value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>"
    />
    <p>You are about to Delete this listing. Please click the button to confirm</p>
    <button type="submit" class="submit-btn" >Confirm Delete</button>
    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

  </form>
</div>
