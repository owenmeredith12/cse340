<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>


<div class="form-container">
  <h2>Edit New Vehicle</h2>

  <form action="/inv/update" method="post" id="editInventoryForm">
    <!-- Vehicle Classification Dropdown -->

    <label for="classificationList">Classification</label>
    <%- classificationSelect %>

    <!-- Vehicle Make -->
    <label for="inv_make">Make</label>
    <input 
      type="text" 
      id="inv_make" 
      name="inv_make" 
      pattern="^[A-Za-z0-9\s]+$" 
      title="Letters and numbers only" 
      required
      value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>"
    />

    <!-- Vehicle Model -->
    <label for="inv_model">Model</label>
    <input 
      type="text" 
      id="inv_model" 
      name="inv_model" 
      pattern="^[A-Za-z0-9\s]+$" 
      title="Letters and numbers only" 
      required
      value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>"
    />

    <!-- Vehicle Year -->
<label for="inv_year">Year</label>
<input 
  type="number" 
  id="inv_year" 
  name="inv_year" 
  min="1900" 
  max="2099" 
  step="1" 
  required
  value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>"
/>

    <!-- Vehicle Description -->
    <label for="inv_description">Description</label>
    <textarea 
      id="inv_description" 
      name="inv_description" 
      required><%= typeof inv_description != 'undefined' ? inv_description : '' %></textarea>

    <!-- Image Path -->
    <label for="inv_image">Image Path</label>
    <input 
      type="text" 
      id="inv_image" 
      name="inv_image" 
      required
      value="<%= typeof inv_image != 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
    />

    <!-- Thumbnail Path -->
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input 
      type="text" 
      id="inv_thumbnail" 
      name="inv_thumbnail" 
      required
      value="<%= typeof inv_thumbnail != 'undefined' ? inv_thumbnail : '/images/vehicles/no-image.png' %>"
    />

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input 
      type="number" 
      id="inv_price" 
      name="inv_price" 
      min="0" 
      step="0.01" 
      required
      value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>"
    />

    <!-- Miles -->
    <label for="inv_miles">Miles</label>
    <input 
      type="number" 
      id="inv_miles" 
      name="inv_miles" 
      min="0" 
      required
      value="<%= typeof inv_miles != 'undefined' ? inv_miles : '' %>"
    />

    <!-- Color -->
    <label for="inv_color">Color</label>
    <input 
      type="text" 
      id="inv_color" 
      name="inv_color" 
      pattern="^[A-Za-z\s]+$" 
      title="Letters only" 
      required
      value="<%= typeof inv_color != 'undefined' ? inv_color : '' %>"
    />

    <button type="submit" class="submit-btn" disabled>Edit Vehicle</button>
    <script src="../../js/inv-update.js" ></script>
    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

  </form>
</div>
