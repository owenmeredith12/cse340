<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>


  <form class="login-form" action="/login" method="post">
    <h2>Login</h2>

    <label for="email">Email Address</label>
    <input type="email" id="email" name="account_email" required>

    <div> 
        <h3> Password needs 1 uppercase, 1 lowercase, 1 number and 1 special character</h3>
    </div>

    <label for="password">Password</label>
    <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <button type="submit">Login</button> 
  </form>

  <a title="Click to log in" href="register">Register HERE!</a>