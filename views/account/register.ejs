<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-container">
    <h2>Register</h2>
    <form action="/account/register" method="post">
      <label for="fname">First name</label>
      <input type="text" id="fname" name="account_firstname" required>

      <label for="lname">Last name</label>
      <input type="text" id="lname" name="account_lastname" required>

      <label for="email">Email address</label>
      <input type="email" id="email" name="account_email" required>

      <div> 
        <h3> Password needs 1 uppercase, 1 lowercase, 1 number and 1 special character</h3>
      </div>
      <label for="password">Password</label>
      <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

      <button type="submit" class="register-btn">Register</button>
    </form>
  </div>